    	proxy_set_header X-Forwarded-For 	$proxy_add_x_forwarded_for;
		proxy_set_header X-Script-Name   	/books/;
	}
	
	# CALIBREOPDS CONTAINER
	location ^~ /booksopds/ {
		#if ($cookie_cookiePassword != "PASSWORD") { return 401; }
