		proxy_set_header X-Script-Name   	/books/;
	}
	
	# PLEX CONTAINER	
	location /tv/ {
        proxy_pass http://plex-upstream/;
        include /config/nginx/SSO.conf;
    }
    if ($http_referer ~* /tv/) {
        rewrite ^/web/(.*) /tv/web/$1? redirect;
    }
	
	# UBOOQUITY CONTAINER
	location ^~ /comics/ {
		#if ($cookie_cookiePassword != "PASSWORD") { return 401; }
